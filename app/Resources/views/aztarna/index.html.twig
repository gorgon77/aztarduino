{% extends 'base.html.twig' %}

{% block body %}

    <h1>Aztarna list</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Eguna</th>
                <th>Ordua</th>
                <th>Longitudea</th>
                <th>Latitudea</th>
                <th>Abiadura</th>
                <th>Inklinazioa</th>
                <th>Malda</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aztarna in aztarnas %}
            <tr>
                <td><a href="{{ path('aztarna_show', { 'id': aztarna.id }) }}">{{ aztarna.id }}</a></td>
                <td>{% if aztarna.eguna %}{{ aztarna.eguna|date('Y-m-d') }}{% endif %}</td>
                <td>{% if aztarna.ordua %}{{ aztarna.ordua|date('H:i:s') }}{% endif %}</td>
                <td>{{ aztarna.longitudea }}</td>
                <td>{{ aztarna.latitudea }}</td>
                <td>{{ aztarna.abiadura }}</td>
                <td>{{ aztarna.inklinazioa }}</td>
                <td>{{ aztarna.malda }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('aztarna_show', { 'id': aztarna.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('aztarna_edit', { 'id': aztarna.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aztarna_new') }}">Create a new entry</a>
        </li>
    </ul>

    <div class="text-center">
        {% if aztarnas is not empty %}
            {% if pager.haveToPaginate %}
                {{ pagerfanta(pager, 'twitter_bootstrap3_translated', {'routeName': 'aztarna_index_paginated'}) }}
            {% endif %}
        {% else %}
            <p>Ez da emaitzarik topatu</p>
        {% endif %}
    </div>
{% endblock %}
